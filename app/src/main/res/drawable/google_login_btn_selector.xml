<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Pressed (when clicked) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/orange"/>
            <corners android:radius="20dp"/>
            <solid android:color="#E0E0E0"/> <!-- Light Gray when pressed -->
            <size android:height="50dp"/>
            <padding android:left="10dp"/>
        </shape>
    </item>

    <!-- Disabled (when button is not clickable) -->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/orange"/>
            <corners android:radius="20dp"/>
            <solid android:color="#F5F5F5"/> <!-- Lighter gray when disabled -->
            <size android:height="50dp"/>
            <padding android:left="10dp"/>
        </shape>
    </item>

    <!-- Default State (Normal White) -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="3dp" android:color="@color/orange"/>
            <corners android:radius="20dp"/>
            <solid android:color="#FFFFFF"/> <!-- Normal White -->
            <size android:height="50dp"/>
            <padding android:left="10dp"/>
        </shape>
    </item>

</selector>
